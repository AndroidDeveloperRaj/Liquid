<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="40dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView_today"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/fragment_budget_today"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/small"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp" />

    <com.jonathanfinerty.liquid.presentation.views.TankView
        android:id="@+id/budget_tank"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:filled="50%"
        app:lineHeight="50%" />

    <LinearLayout
        android:id="@+id/linearLayout_spent_labels"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" >

        <TextView
            android:id="@+id/textView_spent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/fragment_budget_spent"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/small"
            android:height="20dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/textView_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:height="20dp"
            android:text="@string/fragment_budget_left"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/small"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>
